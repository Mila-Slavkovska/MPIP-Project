<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="8dp"
            android:text="Choose Your Pet"
            android:textColor="#2D3436"
            android:textSize="28sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:text="Your virtual companion will be with you on your self-care journey"
            android:textAlignment="center"
            android:textColor="#636E72"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/cat_card"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/cat_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E8F4FD"
                        android:contentDescription="Cat pet option"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/pet_cat" />

                    <TextView
                        android:id="@+id/cat_selected"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:background="#FFFFFF"
                        android:contentDescription="Cat selected indicator"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:text="✓"
                        android:textColor="#00B894"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Cat"
                    android:textColor="#2D3436"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Independent &amp; Calm"
                    android:textColor="#636E72"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/turtle_card"
                android:layout_width="0dp"
                android:layout_height="240dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:background="#FFFFFF"
                android:clickable="true"
                android:elevation="2dp"
                android:focusable="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp">

                <FrameLayout
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/turtle_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#E8F4FD"
                        android:contentDescription="Turtle pet option"
                        android:padding="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/pet_turtle" />

                    <TextView
                        android:id="@+id/turtle_selected"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_gravity="top|end"
                        android:layout_margin="4dp"
                        android:background="#FFFFFF"
                        android:contentDescription="Turtle selected indicator"
                        android:elevation="4dp"
                        android:gravity="center"
                        android:text="✓"
                        android:textColor="#00B894"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:visibility="gone" />

                </FrameLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Turtle"
                    android:textColor="#2D3436"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Wise &amp; Steady"
                    android:textColor="#636E72"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:boxStrokeColor="#6C63FF"
            app:hintTextColor="#6C63FF">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/pet_name_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your pet's name"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#6C63FF"
            android:enabled="false"
            android:text="Continue"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Pet Selection v3.0 - User Isolation + Custom Images"
            android:textColor="#999999"
            android:textSize="10sp" />

    </LinearLayout>

</ScrollView>